<h1>Invite User to <%= @event.name %></h1>

<button type="button" class="btn btn-light"><%= link_to "Back", event_path(@event) %></button>

<ul class="list-group list-group-flush">
  <%= form_tag adding_user_event_path do %>
    <% @users.each do |user| %>
  <li class="list-group-item"><%= check_box_tag 'user_ids[]', user.id %>
    <%= user.username %>
  </li>
  <% end %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
   <input type="submit" value="Submit">
  <% end %>
</ul>

<br>
Currently Invited:
<ul>
  <% @event.users.each do |user| %>
  <li><%= user.username %></li>
  <% end %>
</ul>
