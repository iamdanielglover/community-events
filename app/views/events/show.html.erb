<h1><%= @event.name %></h1>

<button type="button" class="btn btn-light"><%= link_to "Invite Users", add_user_event_path(@event) %></button>
<button type="button" class="btn btn-light"><%= link_to "Edit Event", edit_event_path(@event) %></button>
<button type="button" class="btn btn-light"><%= link_to "See Other Events", events_path %></button>
<button type="button" class="btn btn-light"><%= link_to "Delete", event_path(@event),
                         :data => {:confirm => "Are You Sure?",
                                   :method => "delete"} %></button>
<div class="card mb-3" style="max-width: 1000px;">
 <div class="row no-gutters">
   <div class="col-md-4">
     <img src="<%= @event.category.img_url %>" class="card-img" alt="...">
   </div>
   <div class="col-md-8">
     <div class="card-body">
       <h5 class="card-title"><h1><%=@event.name %></h1></h5>
       <p class="card-text">Description: <%= @event.description %></p>
       <p class="card-text">Currently Invited: <%= link_to @event.users.length, view_users_event_path %></p>
       <p class="card-text">Location: <%= link_to @event.location.name, location_path(@event.location) %></p>
       <p class="card-text">Category: <%= link_to @event.category.name, category_path(@event.category) %></p>
       <p class="card-text">Starts At: <%= @event.display_start %></p>
       <p class="card-text">Ends At: <%= @event.display_start %></p>
     </div>
   </div>
 </div>
</div>
