<h1>Index Of Users</h1>

<button type="button" class="btn btn-light"><%= link_to "Create Event", new_event_path %></button>
<button type="button" class="btn btn-light"><%= link_to "See Other Events", events_path %></button>

<div class="list-group">
  <% @users.each do |user| %>
  <a href="/users/<%= user.id %>" class="list-group-item list-group-item-action">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1"><%= user.username %></h5>
    </div>
    <small class="text-muted">Events Count: <%= user.events.count %></small>
  </a>
  <% end %>
</div>
